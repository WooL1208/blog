{% extends 'layout.twig' %}

{% block body %}
    <div class="card" id="article-content"></div>

    <div class="mb-3">
        <label for="write-comment" class="form-label">留言</label>
        <textarea class="form-control" placeholder="寫下留言" id="write-comment" rows="3"></textarea>
    </div>
    <div class="d-flex">
        <div class="me-auto d-inline-flex" id="user-name"></div>
        <div class="ms-auto d-inline-flex" id="comment-btn"></div>
        <div class="alert alert-danger" role="alert" style="visibility:hidden" id="comment-warning">
            留言失敗，請重新輸入
        </div>
    </div>
    <div id="read-comment"></div>

    <script src="/javascripts/comments.js"></script>

{% endblock body %}