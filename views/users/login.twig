{% extends 'layout.twig' %}

{% block body %}
	<h1>登入</h1>
	<!-- Pills navs href="#pills-login"-->
	<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
		<li class="nav-item" role="presentation">
			<a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="/users/login" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="/users/register" role="tab" aria-controls="pills-register" aria-selected="false">Register</a>
		</li>
	</ul>
	<!-- Pills navs -->

	<!-- Pills content -->
	<div class="tab-content">
		<div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
			<form>
				<!-- Account input -->
				<div class="form-outline mb-4">
					<label class="form-label" for="account">Account</label>
					<input type="text" id="account" name="account" class="form-control"/>
				</div>

				<!-- Password input -->
				<div class="form-outline mb-4">
					<label class="form-label" for="password">Password</label>
					<input type="password" id="password" name="password" class="form-control"/>
				</div>

				<!-- Submit button -->
				<div style="text-align:center">
					<button type="submit" class="btn btn-primary btn-block mb-4 text-center" id="login">Sign in</button>
				</div>
				<div class="alert alert-danger" role="alert" style="visibility:hidden" id="warning">
					帳號或密碼錯誤
				</div>
			</form>
		</div>
	</div>
</div>

<script src="/javascripts/auth.js"></script>
{% endblock %}
