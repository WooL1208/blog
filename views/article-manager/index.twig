{% extends 'layout.twig' %}

{% block body %}
	<div class="mt-3">
		<h1>{{title}}</h1>
	</div>

	<div style="text-align:right" class="p-2">
		<button type="button" class="btn btn-primary btn-block" id="add-article-btn">新增</button>
		<button type="button" class="btn btn-secondary btn-block" onclick="location.href='/'">返回</button>
	</div>

	<table class="table" style="table-layout: fixed; word-wrap: break-word;">
		<thead class="table-dark">
			<tr>
				<th scope="col" style="width: 5%">#</th>
				<th scope="col" style="width: 28%">文章名</th>
				<th scope="col" style="width: 7%">類別</th>
				<th scope="col" style="width: 16%">作者</th>
				<th scope="col" style="width: 12%">創建時間</th>
				<th scope="col" style="width: 12%">更新時間</th>
				<th scope="col" style="width: 10%">功能</th>
			</tr>
		</thead>
		<tbody id='search-bar'>
			<tr>
				<th scope="row"></th>
				<td>
					<input type="text" class="form-control" id="search-title" placeholder="文章名">
				</td>
				<td>
					<select class="form-control" id="search-category">
						<option selected value="">全部</option>
						<option value="生活">生活</option>
						<option value="科技">科技</option>
						<option value="美食">美食</option>
						<option value="理財">理財</option>
					</select>
				</td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		</tbody>
		<tbody id='articles-list'></tbody>
	</table>
	<div class="container">
		<nav aria-label="Page navigation example">
			<ul class="pagination justify-content-center" id="article-page-ul"></ul>
		</nav>
	</div>
	<script type="module" src="/javascripts/article-manager.js"></script>
{% endblock body %}
